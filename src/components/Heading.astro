---
import { cva, type VariantProps } from 'class-variance-authority';
import { twMerge } from 'tailwind-merge';
import H1 from './H1.astro';
import H2 from './H2.astro';

interface Props {
  title?: string;
  subtitle?: string;
  className?: string;
  highlight?: string[];
  position?: 'left' | 'center' | 'right';
}

const {
  title,
  subtitle,
  className,
  highlight,
  position = 'left',
} = Astro.props;

const heading = cva(twMerge('mb-16 space-y-6 max-w-3xl animate', className), {
  variants: {
    position: {
      left: 'text-left',
      center: 'mx-auto text-center',
      right: 'text-right',
    },
  },
});
---

<div class={heading({ position })}>
  <H1 highlight={highlight}>{title}</H1>
  <H2 highlight={highlight}>{subtitle}</H2>
  <slot />
</div>
