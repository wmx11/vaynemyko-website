---
import { Image } from 'astro:assets';
import Alchemy from '../../assets/alchemy.png';
import Anvil from '../../assets/anvil.png';
import Hammer from '../../assets/hammer.png';
import Time from '../../assets/time.png';
import H1 from '../../components/H1.astro';
import H2 from '../../components/H2.astro';
import HeroWrapper from '../../components/HeroWrapper.astro';
import NewsletterForm from '../../components/svelte/NewsletterForm.svelte';
---

<section>
  <HeroWrapper className="justify-center">
    <div class="flex-1 flex items-center p-16 max-w-4xl text-center z-10">
      <div class="flex flex-col space-y-8 flex-1">
        <H1 className="animate" highlight={['forge your path']}>
          ready to forge your path?
        </H1>
        <H2 className="animate" highlight={['Digital Blacksmith']}>
          Become a <strong>Digital Blacksmith</strong>. Forge your own path
          every Saturday with topics on experiences, one-person businesses,
          alchemy, and mindset.
        </H2>
        <div>
          <NewsletterForm client:idle />
        </div>
      </div>
    </div>
    <div
      class="w-[80px] h-[80px] absolute left-[5%] md:top-[12%] md:left-[20%] float animate"
    >
      <Image
        src={Time}
        alt="time hologram"
        class="absolute inset-0 w-full h-full hover:scale-125 transition"
      />
    </div>
    <div
      class="w-[80px] h-[80px] absolute right-[5%] md:top-[5%] md:right-[25%] float animate"
    >
      <Image
        src={Hammer}
        alt="time hologram"
        class="absolute inset-0 w-full h-full hover:scale-125 transition"
      />
    </div>
    <div
      class="w-[80px] h-[80px] absolute bottom-[2%] md:bottom-[20%] md:right-[15%] float animate"
    >
      <Image
        src={Anvil}
        alt="anvil hologram"
        class="absolute inset-0 w-full h-full hover:scale-125 transition"
      />
    </div>
    <div
      class="w-[80px] h-[80px] absolute md:bottom-[15%] md:left-[10%] float animate"
    >
      <Image
        src={Alchemy}
        alt="time hologram"
        class="absolute inset-0 w-full h-full hover:scale-125 transition"
      />
    </div>
  </HeroWrapper>
</section>
