    <!-- </div> -->
    <div class="w-[80px] h-[80px] absolute top-[20%] left-[20%] float animate">
      <Image
        src={Time}
        alt="time hologram"
        class="absolute inset-0 w-full h-full"
      />
    </div>
    <div class="w-[80px] h-[80px] absolute top-[5%] right-[25%] float animate">
      <Image
        src={Hammer}
        alt="time hologram"
        class="absolute inset-0 w-full h-full"
      />
    </div>
    <div
      class="w-[80px] h-[80px] absolute bottom-[15%] right-[15%] float animate"
    >
      <Image
        src={Anvil}
        alt="anvil hologram"
        class="absolute inset-0 w-full h-full"
      />
    </div>
    <div
      class="w-[80px] h-[80px] absolute bottom-[15%] left-[10%] float animate"
    >
      <Image
        src={Alchemy}
        alt="time hologram"
        class="absolute inset-0 w-full h-full"
      />
    </div>
  </HeroWrapper>
</section>
