---
import { Image } from 'astro:assets';
import Container from '../components/Container.astro';
import Section from '../components/Section.astro';
import Layout from '../layouts/Layout.astro';
import NewsletterCTACard from '../components/NewsletterCTACard.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import routes from '../utils/routes';
import type { CollectionEntry } from 'astro:content';

const {
  data: { contentImageAlt, contentImage, title },
} = Astro.props as CollectionEntry<'blog'>;
---

<Layout title={title}>
  <Section>
    <Container>
      <Breadcrumbs
        crumbs={[{ label: 'Blog', path: routes.blog }, { label: title }]}
      />
      <div
        class="h-[500px] bg-red-200 rounded-md mb-16 max-w-5xl w-full mx-auto overflow-hidden"
      >
        {
          contentImage && (
            <Image
              src={contentImage}
              alt={contentImageAlt}
              width="1000"
              height="500"
              class="w-full h-auto"
            />
          )
        }
      </div>
      <article class="prose !prose-invert prose-lg mx-auto">
        <slot />
      </article>
    </Container>
  </Section>
  <Section>
    <Container>
      <div class="flex items-center justify-center">
        <NewsletterCTACard />
      </div>
    </Container>
  </Section>
</Layout>
